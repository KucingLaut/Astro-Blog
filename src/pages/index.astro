---
import BaseLayout from '../layouts/BaseLayout.astro';
const allPost = await Astro.glob('../pages/posts/*.md')
import BlogPost from '../components/BlogPost.astro';
---

<BaseLayout>
	<div class="flex flex-col gap-4">
		<div>
			<h1 class="font-bold text-3xl">こんにちは！</h1>
			<h2>Welcome to my blog. I write random stuff from food to life!</h2>
		</div>
		<div>
			<h1 class="font-bold text-3xl">Recent Writings</h1>
			<div class="flex flex-col-gap-4">
				<ul>
					{allPost.slice(0,3).map((post) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
				</ul>
			</div>
		</div>
	</div>
</BaseLayout>
