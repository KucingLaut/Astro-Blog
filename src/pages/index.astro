---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import InstagramIcon from '../components/InstagramIcon.astro';
import GithubIcon from '../components/GithubIcon.astro';
const allPost = await Astro.glob('../pages/posts/*.md')
allPost.sort((a, b) => Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate))
---

<BaseLayout>
	<div class="flex flex-col gap-4">
		<div class="flex flex-col py-32 px-4">
			<h1 class="page-title">ようこそ。</h1>
			<p class="text-xl">Welcome to my blog. I write random stuff from food to life!</p>
			<div class="flex gap-2 pt-4">
				<a href={`https://www.instagram.com/kyuda98`}><InstagramIcon /></a>
				<a href={`https://www.github.com/KucingLaut`}><GithubIcon/></a>
			</div>
		</div>
		<div class="flex flex-col">
			<h1 class="page-subtitle">Recent Posts</h1>
			<div class="flex flex-col gap-8">
				{allPost.slice(0,3).map((post) => 
					<BlogPostCard 
						url={post.url}
						title={post.frontmatter.title} 
						pubDate  = {post.frontmatter.pubDate}
						image = {post.frontmatter.image}
						description = {post.frontmatter.description}
						tags = {post.frontmatter.tags}/>
				)}
			</div>
		</div>
	</div>
</BaseLayout>
